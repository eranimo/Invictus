{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "worker-loader!*": [
        "*"
      ],
      "@invictus/generator": [
        "./generator/src"
      ],
      "@invictus/generator/*": [
        "./generator/src/*"
      ],
      "@invictus/main": [
        "./main/src"
      ],
      "@invictus/main/*": [
        "./main/src/*"
      ],
      "@invictus/renderer": [
        "./renderer/src"
      ],
      "@invictus/renderer/*": [
        "./renderer/src/*"
      ],
      "@invictus/worker": [
        "./worker/src"
      ],
      "@invictus/worker/*": [
        "./worker/src/*"
      ]
    }
  },
  "include": [
    "packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}