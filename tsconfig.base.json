{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["esnext", "es2017", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types",
      "packages/*/node_modules/@types",
      "./typings"
    ],
    "sourceMap": true
  }
}
